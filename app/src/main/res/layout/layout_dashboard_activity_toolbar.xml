<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_dashboard_RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/dashboard_container"
        android:layout_width="@dimen/dimen_32"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_centerVertical="true"
        android:clickable="true">

        <ImageView
            android:id="@+id/dashboard_hambuger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@mipmap/ic_hamburger" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dashboard_title_RL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_toRightOf="@+id/dashboard_container">

        <com.cv.anandmjoseph.anandcv.customwidget.RobotoMediumTextView
            android:id="@+id/dashboard_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/color_222222"
            android:textSize="20sp" />

        <com.cv.anandmjoseph.anandcv.customwidget.RobotoRegularTextView
            android:id="@+id/dashboard_last_updated_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard_title_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_888888"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>